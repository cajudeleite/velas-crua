<div class="container pt-3">
    <div class="row">
      <% @candles.each do |candle| %>
        <div class="col-md-12 col-sm-12 col-xl-6">
          <div class="candle-card">
            <div class="wrapper">
              <div class="product-img">
                <img src="<%=candle_array.sample%>" height="321" width="250">
              </div>
              <div class="product-info">
                <div class="product-text">
                <% if candle.name == '' || candle.name.include?('Faker') %>
                  <h1>candle #<%=candle.id%></h1>
                <% else %>
                  <h1><%= candle.name %></h1>
                <% end %>
                  <br>
                  <p><%=candle.description%> </p>
                </div>
                <div class="price-flex">
                  <p><%= candle.price %> R$</p>
                  <div class="product-price-btn">
                      <%= link_to candle_url(candle) do  %>
                      <button type="button">comprar</button>
                      <% end  %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    </div>
  </div>
