<div class="login-signup d-flex align-items-center" style="height: calc(100vh - 70px);">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-7">
        <h1>Sign Up</h1>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="pb-4"><%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { class: 'py-1' } %></div>
            <div class="pb-3"><%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} caracteres no mÃ­nimo" if @minimum_password_length),
                        input_html: { class: 'py-1' } %></div>
            <div class="pb-4"><%= f.input :password_confirmation,
                        required: true,
                        input_html: { class: 'py-1' } %></div>
          </div>
          <div class="container text-center">
            <%= render "devise/shared/links" %>
            <div class="container d-flex justify-content-center">
              <div class="form-actions btn mt-3">
                <%= f.button :submit, "Sign up" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
